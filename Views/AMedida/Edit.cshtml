@model ProyectoFinal.Models.Product;
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor


@if (string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("Id")))
{
    <div class="alert alert-warning mt-4" role="alert">
        Para realizar tu pedido personalizado inicia sesión
    </div>
}
else
{
    

    <div class="container-fluid px-sm-1 py-5">
        <div class="row ">


            <div class="d-flex col-lg-6">

                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">


                        @{


                            <div class="carousel-item active">
                                <img class="d-block w-100" src="@Model.lstimages.First().url" alt="First slide">
                            </div>
                        }

                        @foreach (var item in Model.lstimages)
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@Html.DisplayFor(modelItem => item.url)" alt="First slide">
                            </div>
                        }

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>


            </div>



            <div class="col-lg-5">
                <form asp-action="CreateOrder" enctype="multipart/form-data">

                    <div class="form-group col">
                        <label asp-for="idProducts" class="control-label">Código del producto</label>
                        <input asp-for="idProducts" class="form-control" readonly />
                        <span asp-validation-for="idProducts" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <textarea asp-for="ProductName" class="form-control" readonly> </textarea>
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <div class="form-group col">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" readonly />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Color" class="control-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label class="control-label">Materiales</label>
                        <input asp-for="Materials" class="form-control" />
                        <span asp-validation-for="Materials" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label class="control-label">Dimensiones (XYZ)</label>
                        <input asp-for="Dimensions" class="form-control" />
                        <span asp-validation-for="Dimensions" class="text-danger"></span>
                    </div>

                    <div class="form-group col">
                        <label class="control-label">Danos mas detalles</label>
                        <textarea asp-for="ProductDesc" class="form-control"> </textarea>
                        <span asp-validation-for="ProductDesc" class="text-danger"></span>
                    </div>


                    <div class="form-group">

                        <input type="submit" value="Ordenar" class="btn btncolor float-lg-right" />
                      

                    </div>


                </form>

            </div>

        </div>
    </div>


}


