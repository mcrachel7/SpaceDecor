@model ProyectoFinal.Models.ViewModels

<div class="container-fluid px-sm-1 py-5">
    <div class="row ">


        <div class="d-flex col-lg-6">
           
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">


                    @{
                      

                        <div class="carousel-item active">
                            <img class="d-block w-100" src="@Model.lstimages.First().url" alt="First slide">
                        </div>
                    }

                    @foreach (var item in Model.lstimages)
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="@Html.DisplayFor(modelItem => item.url)" alt="First slide">
                        </div>
                    }

                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            

        </div>


        @foreach (var item in Model.lstproducts)
        {
            <div class="col-lg-5">
            <h2 class="h2"> @Html.DisplayFor(modelItem => item.ProductName)</h2>
            <h1 class="h2">$ @Html.DisplayFor(modelItem => item.Price)</h1>



        <hr />

        <p> @Html.DisplayFor(modelItem => item.ProductDesc)</p>


            <h4 class="mt-3">Caracteristicas:</h4>
            <div class="row mt-3">
                <h4 class="col"><i class="fas fa-fill-drip"></i>  @Html.DisplayFor(modelItem => item.Color)</h4>
                <h4 class="col"><i class="fas fa-expand-arrows-alt"></i>  @Html.DisplayFor(modelItem => item.Dimensions)</h4>
            </div>
            <h4 class=""><i class="fas fa-tools"></i>  @Html.DisplayFor(modelItem => item.Materials)</h4>

            <div class="row float-right mt-4">
                @Html.ActionLink("A medida", "Edit", "AMedida", new { id = item.idProducts }, new { @class = "btn btncolor m-2" })
              
            </div>

    </div>
        }
    </div>
</div>