@model ProyectoFinal.Models.User;

<div class="container mt-4">
    <div class="row">
        <div class="card col-xl-8 p-4 m-auto">
            <form role="form" asp-action="Login">

                @if (ViewBag.f == 1)
                {
                    <div class="alert alert-danger mt-2" role="alert">
                       Verifique sus datos
                    </div>
                }


                <div class="form-group">
                    <label asp-for="Email">Ingrese correo electrónico</label>
                    <input asp-for="Email" type="text" class="form-control mt-2" id="inputUsernameEmail">
                </div>
                <div class="form-group mt-4">
                    <label asp-for="Password">Contraseña</label>
                    <input type="password" asp-for="Password" class="form-control mt-2" id="inputPassword">
                    <a class="pull-right" href="#">Forgot password?</a>
                </div>

                <button type="submit" value="Login" class="btn mt-4 btncolor">
                    Iniciar sesión
                </button>
            </form>
        </div>

    </div>
</div>

