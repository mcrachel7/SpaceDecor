@model ProyectoFinal.Models.Product

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateProduct</title>
</head>
<body>

    <h4 class="mt-5">Product</h4>
    <hr />
    @{
        if (ViewBag.err == 1)
        {
            <div class="alert alert-danger" role="alert">
               @ViewBag.msj;
            </div>
        }

    }
    <div class="row">
        <div class="col-md-12">
            <form asp-action="CreateProduct" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row g-3">
                    <div class="form-group col">
                        <label class="control-label">Id de producto</label>
                        <input asp-for="idProducts" class="form-control" />
                        <span asp-validation-for="idProducts" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label class="control-label">Nombre de producto</label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="form-group col">
                        <label class="control-label ">Descripción de producto</label>
                        <input type="text" asp-for="ProductDesc" class="form-control" />
                        <span asp-validation-for="ProductDesc" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label class="control-label">Marca</label>
                        <input asp-for="Marca" class="form-control" />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>

                </div>

                <div class="row g-3">
                    <div class="form-group col">
                        <label class="control-label">Precio</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label class="control-label">color</label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>

                </div>


                <div class="row g-3">
                    <div class="form-group col">
                        <label class="control-label">Dimemsiones</label>
                        <input asp-for="Dimensions" class="form-control" />
                        <span asp-validation-for="Dimensions" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label class="control-label">Materiales</label>
                        <input asp-for="Materials" class="form-control" />
                        <span asp-validation-for="Materials" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="form-group col">
                        <label asp-for="ProductType"class="control-label">Tipo de producto</label>
                        <input asp-for="ProductType" class="form-control" />
                        <span asp-validation-for="ProductType" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="StockQ"class="control-label">Cantidad en stock</label>
                        <input asp-for="StockQ" class="form-control" />
                        <span asp-validation-for="StockQ" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="form-group col">
                        <label asp-for="ThumbnailImage" class="control-label">Cargar Thumbnail</label>
                        <input asp-for="ThumbnailImage" class="form-control" />
                        <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                    </div>

                    <div class="form-group col">
                        <label asp-for="Images" class="control-label">Subir imagenes</label>
                        <input asp-for="Images" class="form-control" type="file" multiple />
                        <span asp-validation-for="Images" class="text-danger"></span>
                    </div>

                </div>
   
                <div class="form-group float-right">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Regresar a productos</a>
    </div>

</body>
</html>
