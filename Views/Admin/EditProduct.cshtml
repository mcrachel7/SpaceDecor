@model ProyectoFinal.Models.Product

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditProduct</title>
</head>
<body>

<h4 class="mt-3">Product</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditProduct"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row g-3">
                <div class="form-group col">
                    <label asp-for="idProducts" class="control-label"></label>
                    <input asp-for="idProducts" class="form-control" readonly />
                    <span asp-validation-for="idProducts" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="row g-3">
                <div class="form-group col">
                    <label asp-for="ProductDesc" class="control-label"></label>
                    <input asp-for="ProductDesc" class="form-control" />
                    <span asp-validation-for="ProductDesc" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Marca" class="control-label"></label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>
            </div>
            <div class="row g-3">
                <div class="form-group col">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
            </div>
            <div class="row g-3">
                <div class="form-group col">
                    <label asp-for="Dimensions" class="control-label"></label>
                    <input asp-for="Dimensions" class="form-control" />
                    <span asp-validation-for="Dimensions" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Materials" class="control-label"></label>
                    <input asp-for="Materials" class="form-control" />
                    <span asp-validation-for="Materials" class="text-danger"></span>
                </div>
            </div>
            <div class="row g-3">
                <div class="form-group col">
                    <label asp-for="ProductType" class="control-label"></label>
                    <input asp-for="ProductType" class="form-control" />
                    <span asp-validation-for="ProductType" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="StockQ" class="control-label"></label>
                    <input asp-for="StockQ" class="form-control" />
                    <span asp-validation-for="StockQ" class="text-danger"></span>
                </div>
            </div>
            <div class="row g-3">
                <div class="form-group col">
                    <label asp-for="ThumbnailImage" class="control-label"></label>
                    <input asp-for="ThumbnailImage" type="file" class="form-control" />
                    <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btncolor" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a los lista</a>
</div>

</body>
</html>
